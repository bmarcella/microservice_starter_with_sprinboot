 version: "3.8"
 services: 
     configserver: 
        image: pledika/configserver
        mem_limit: 700m
        ports:
          - "8071:8071"
        networks:
          - pledika-network
          
     eurekaserver: 
        image: pledika/eurekaserver
        mem_limit: 700m
        ports:
          - "8070:8070"
        networks:
          - pledika-network 
          - pledika-network-fe
        depends_on:
          - configserver
        environment:
          SPRING_PROFILES_ACTIVE: default
          SPRING_CONFIG_IMPORT: configserver:http://localhost:8071  
          
     accounts : 
        image: pledika/accounts
        mem_limit: 700m
        ports:
          - "8080:8080"
        networks:
          - pledika-network
        depends_on:
          - configserver  
          - eurekaserver
          - loans
        deploy:
          restart_policy:
            condition: on-failure
            delay: 5s
            max_attempts: 3
            window: 120s
        environment:
          SPRING_PROFILES_ACTIVE: default
          SPRING_CONFIG_IMPORT: configserver:http://localhost:8071  
            
     loans : 
        image: pledika/loans
        mem_limit: 700m
        ports:
          - "8081:8081"
        networks:
          - pledika-network
        depends_on:
          - configserver  
          - eurekaserver
        deploy:
          restart_policy:
            condition: on-failure
            delay: 5s
            max_attempts: 3
            window: 120s
        environment:
          SPRING_PROFILES_ACTIVE: default
          SPRING_CONFIG_IMPORT: configserver:http://localhost:8071       
 networks: 
